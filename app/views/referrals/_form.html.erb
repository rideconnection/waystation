<%= simple_form_for(@referral, :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>
  <%= f.input :first_name, :input_html => {:size => 35} %>
  <%= f.input :last_name, :input_html => {:size => 35} %>
  <%= f.input :customer_phone, :input_html => {:size => 35} %>
  <%= f.input :case_manager_name, :input_html => {:size => 35} %>
  <%= f.input :case_manager_email, :input_html => {:size => 35} %>
  <%= f.input :note %>
  <%= f.input :active if current_user.admin? %>
  <%= f.input :ucr_form %>
  <%= f.button :submit %>
<% end %>
