<%= simple_form_for @user do |f| %>
  <%= f.error_messages %>
  <%= f.input :username, :input_html => {:size => 25} %>
  <%= f.input :email, :input_html => {:size => 25}  %>
  <%= f.input :user_type, :collection => User.user_types if current_user.admin? %>
  <%= f.input :active if current_user.admin? %>
  <%= f.input :password, :input_html => {:size => 25}  %>
  <%= f.input :password_confirmation, :input_html => {:size => 25}  %>
  <%= f.button :submit %>
<% end %>
